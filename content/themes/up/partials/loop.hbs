{{! This is the post loop - each post will be output using this markup }}

{{#foreach posts}}
<article class="{{post_class}}">
  {{#if @first}}
    <span class="first-article-text">
      <i class="fa fa-quote-left" aria-hidden="true"></i> 
      Primer Art√≠culo 
      <i class="fa fa-quote-right" aria-hidden="true"></i>
    </span>
  {{/if}}
  <div class="box-images">
    {{#if image}}
      <a href="{{image}}" class="open-popup-link" title="{{{title}}}">
        <img src="{{image}}" alt="{{{title}}} - Picture">
      </a>
    {{else}}
      <a href="{{asset "images/cover/default.png"}}" class="open-popup-link" title="Image default">
        <img src="{{asset "images/cover/default.png"}}">
      </a>
    {{/if}}
    {{#if author.image}}
      {{#author}}
        <a href="{{url}}">
          <img class="author-thumb" src="{{image}}" alt="{{name}}'s Picture" nopin="nopin" title="Author: {{name}}"/>
        </a>
        <span class="author-name">{{name}}</span>
      {{/author}}
    {{else}}
      <a href="{{author.url}}">
        <img class="author-thumb img-author-default" src="{{asset "images/author-default.png"}}" alt="Picture" nopin="nopin" title="image default"/>
      </a>
    {{/if}}
  </div>
  <div class="inner">
    <header class="post-header">
      <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
      <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}"><i class="fa fa-calendar-o" aria-hidden="true"></i> {{date format="DD MMMM YYYY"}}</time>
    </header>
      <div class="line"></div>
    <section class="post-excerpt">
    
      <p>{{excerpt words="26"}}...</p>
    </section>
  </div>
  <footer class="post-meta">
    <a class="btn read-more" href="{{url}}">Read more <i class="fa fa-angle-double-right" aria-hidden="true"></i></a>  
  </footer>
</article>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}