{{! This is the post loop - each post will be output using this markup }}

{{#foreach posts}}
<article class="{{post_class}}">
  <div class="box-images">
    {{#if image}}
      <a href="{{url}}">
        <img src="{{image}}" alt="{{{title}}} - Picture">
      </a>
    {{/if}}
    {{#if author.image}}
      <img class="author-thumb" src="{{author.image}}" alt="{{author.name}}'s Picture" nopin="nopin" title="{{author.name}}"/>
      <span class="author-name">{{author}}</span>
    {{/if}}
  </div>
  <div class="inner">
    <header class="post-header">
      <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
      <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}"><i class="fa fa-calendar-o" aria-hidden="true"></i> {{date format="DD MMMM YYYY"}}</time>
    </header>
    <div class="line"></div>
    <section class="post-excerpt">
      <p>{{excerpt words="26"}}...</p>
    </section>
  </div>
  <footer class="post-meta">
    <a class="read-more" href="{{url}}">Read more <i class="fa fa-angle-double-right" aria-hidden="true"></i></a>  
  </footer>
</article>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}