{{! This is the post loop - each post will be output using this markup }}

{{#foreach posts}}
<article class="{{post_class}}">
  <div class="box-images">
    {{#if image}}
      <a href="{{url}}" title="{{{title}}}">
        <img src="{{image}}" alt="{{{title}}} - Picture">
      </a>
    {{else}}
      <img src="{{asset "images/cover/default.png"}}" alt="{{{title}}} - Picture">
    {{/if}}
    {{#author}}
      {{#if author.image}}
        <a href="{{url}}">
          <img class="author-thumb" src="{{author.image}}" alt="{{author.name}}'s Picture" nopin="nopin" title="{{author.name}}"/>
        </a>
        <span class="author-name">{{author}}</span>
      {{else}}
        <a href="{{url}}">
          <img class="author-thumb img-author-default" src="{{asset "images/author-default.png"}}" alt="{{author.name}}'s Picture" nopin="nopin" title="image default"/>
        </a>
        <span class="author-name">{{author}}</span>
      {{/if}}
    {{/author}}
  </div>
  <div class="inner">
    <header class="post-header">
      <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
      <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}"><i class="fa fa-calendar-o" aria-hidden="true"></i> {{date format="DD MMMM YYYY"}}</time>
    </header>
    <div class="line"></div>
    <section class="post-excerpt">
      <p>{{excerpt words="26"}}...</p>
    </section>
  </div>
  <footer class="post-meta">
    <a class="read-more" href="{{url}}">Read more <i class="fa fa-angle-double-right" aria-hidden="true"></i></a>  
  </footer>
</article>
{{/foreach}}

