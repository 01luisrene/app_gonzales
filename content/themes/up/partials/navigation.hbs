{{! main header }}
<header class="headroom header--fixed">
{{! navigation menu }}
<nav class="navigation">
	<div class="box-inner box-inner-navigation">
	{{! menu box for mobile }}
	<div class="box-nav-mobile">
		{{#if @blog.logo}}
		<figure class="logo">
				<a href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}"></a>
		</figure>
		{{else}}
			<a class="name-app" href="{{@blog.url}}">{{@blog.title}}</a>
		{{/if}}
		{{! mobile navigation icon }}
		<span class="nav-icon-mobile" id="js_nav_icon_mobile">
			<i class="fa fa-bars" aria-hidden="true"></i>
		</span>
	</div>
	{{! blog pages list }}
	<ul class="nav-menu" id="js_nav_menu">
		{{#foreach navigation}}
		{{#if current}}
			<li class="nav-menu-item item-current {{slug}}" role="presentation"><span title="{{label}}">{{label}}</span></li>
		{{else}}
		  <li class="nav-menu-item {{slug}}" role="presentation"><a href="{{url absolute="true"}}" title="{{label}}">{{label}}</a></li>
		{{/if}}		
		{{/foreach}}
	</ul>
	</div>
</nav>
</header>


