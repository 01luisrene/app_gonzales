{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}

{{! Everything inside the #post tags pulls data from the page }}
{{#post}}

{{> "presentation"}}

  <article class="{{post_class}} page-content box-inner">
    <section class="body-content">
        {{content}}
    </section>
    <section class="from-contact">

      <h3 class="title-contacto">From Contact</h3>

      <form class="form-contact" action="//formspree.io/01luisrene@gmail.com" method="POST">
        <!-- DO NOT EDIT BELOW THIS LINE -->
        <input type="hidden" name="_subject" value="Message of {{@blog.url}}" />
        <input type="text" name="_gotcha" style="display:none" />
        <input type="hidden" name="_next" value="{{@blog.url}}/thanks/" />
        <div class="form-imput">
          <input type="text" name="name" placeholder="Name complete" required></input>
        </div>
        <div class="form-imput"> 
          <input type="email" name="email" placeholder="Email" required></input>
        </div>
        <div class="form-imput">
          <textarea name="message" id="" cols="30" rows="3" placeholder="Write you message :)" required></textarea>
        </div>
          <input class="btn-form" type="submit" value="Send message"></input>
      </form>
    </section>
  </article>
{{/post}}