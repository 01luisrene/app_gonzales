{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! If we have a tag cover, display that - else blog cover - else nothing }}
<section class="presentation-section tag-head {{#if tag.image}}" style="background-image: url({{tag.image}}){{else}}{{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}{{/if}}">
  <div class="vertical box-inner">
    <div class="presentation-content">
      <h1 class="post-title">{{tag.name}}</h1>
      <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}"><i class="fa fa-calendar-o" aria-hidden="true"></i> {{date format="DD MMMM YYYY"}}</time>
      <p class="page-description">
        {{#if tag.description}}
          {{tag.description}}
        {{else}}
          A {{pagination.total}}-post collection
        {{/if}}
      </p>
    </div>
  </div>
  {{> "search"}}
</section>

{{! The main content area on the homepage }}
<main class="loop-content box-inner" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>